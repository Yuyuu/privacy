main
  section
    .container
      .banner
        i.fa.fa-user-secret(aria-hidden="true")
  section
    .container
      .row
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
          form(role="form" name="landing.join")
            .row
              .col-xs-6
                .form-group(pv-element-validation="landing.join.roomId")
                  input#room.form-control.input-lg(type="text" name="roomId" ng-model="landing.roomId"
                      placeholder="Room name or ID" required="true")
              .col-xs-6
                .form-group(pv-element-validation="landing.join.playerName")
                  input#username.form-control.input-lg(type="text" name="playerName" ng-model="landing.username"
                      placeholder="Username" required="true")
            .row
              .col-sm-6
                button.btn.btn-primary-inverse.btn-huge.btn-block(type="button"
                    ng-click="landing.createRoom(landing.roomId, landing.username)" ng-disabled="landing.join.$invalid")
                  i.fa.fa-plus-square-o(aria-hidden="true")
                  | Create the room
              .col-sm-6
                button.btn.btn-primary-inverse.btn-huge.btn-block(type="button"
                    ng-click="landing.joinRoom(landing.roomId, landing.username)" ng-disabled="landing.join.$invalid")
                  i.fa.fa-sign-in(aria-hidden="true")
                  | Join the room
