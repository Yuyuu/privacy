.row
  .history-zone(ng-controller="LastTurnController as lastturnvm" ng-show="lastturnvm.results")
    .history-title Résultats du tour précédent
    .history-estimate Estimation correcte : {{lastturnvm.results.yesCount}}
    table.table.table-condensed
      thead
        tr
          th Joueur
          th Est. #OUI
          th
      tbody
        tr(ng-repeat="player in vm.room.players")
          th(scope="row" ng-bind="::player.username")
          td(ng-bind="lastturnvm.results.details[player.id].yesCountGuess")
          td
            i.fa(aria-hidden="true" ng-show="lastturnvm.results"
                pv-validation-icon="lastturnvm.results.details[player.id].correct")